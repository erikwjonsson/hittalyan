.row
  .span12.box.opaque
    .padhack
      %span(id="links")
        %a(href="#/medlemssidor") Medlemssidor
        |
        %a(href="#/medlemssidor/installningar") Inställningar
        %hr
      %table(id="apartments-list")
        %legend Lägenheter
        %tr(ng-repeat="apartment in apartments")
          %td
            %img(src="images/arnoldpumping_small.jpg")
          %td
            %br
            {{apartment.address}}
            %br
            Rum: {{apartment.rooms}}
            %br
            Area: {{apartment.area}} kvm
            %br
            Hyra: {{apartment.rent}} kr
            %br
            %br
            %a(href="{{apartment.url}}") Till hyresvärden