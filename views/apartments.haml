.row
  .span3.bottom-buffer
    #member-nav
      %ul.nav.nav-stacked.nav-pills
        %li.box.opaque
          %a{href: "#!/medlemssidor"} Medlemssidor
        %li.box.opaque
          %a{href: "#!/medlemssidor/installningar"} Inställningar
        %li.box.opaque
          %a{href: "#!/medlemssidor/lagenheter"} Lägenheter
        %li.box.opaque
          %a{href: "#!/medlemssidor/prenumeration"} Prenumeration
    #member-info-box
      .box.opaque
        %div.alert.alert-info(ng-show="userData.premium_until")
          Din prenumeration gäller fram till och med {{oneDayBefore(userData.premium_until) | date: 'yyyy-MM-dd'}}.
          %div(ng-show="userData.sms_until")
            SMS är aktiverat fram till och med {{oneDayBefore(userData.sms_until) | date: 'yyyy-MM-dd'}}.
  .span9.box.opaque
    .padhack
      .alert(ng-hide="userData.active")
        Obs! För att få lägenhetstips måste du aktivera en prenumeration.
        %a(href="#!/medlemssidor/prenumeration") Gå till prenumerationer
      %h2 Lägenheter
      .row-fluid.bottom-buffer(ng-repeat="apartment in apartments")
        .span3
          %a(href="{{apartment.url}}")
            %img.apartment-image(src="images/apartments.png"
                 alt="Lägenhet")
        .span9
          %strong Ort: 
          {{apartment.city}}
          %br
          %strong Adress: 
          {{apartment.address}}
          %br
          %strong Rum: 
          {{apartment.rooms}}
          %br
          %strong Yta: 
          {{apartment.area}} kvm
          %br
          %strong Hyra: 
          {{apartment.rent}} kr
          %br
          %em
            Lägenheten publicerades 
            {{apartment.advertisement_found_at | date: 'yyyy-MM-dd HH:mm:ss'}}
          %br
          %a(href="{{apartment.url}}") Se lägenheten hos {{apartment.landlord}}
            
