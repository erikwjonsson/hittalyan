.row
  .span12.box.opaque
    .padhack
      %span(id="links")
        %a(href="#/medlemssidor") Medlemssidor
        |
        %a(href="#/medlemssidor/lagenheter") Lägenheter
        %hr
      %form(name="filtersettings" ng-submit="submit()" novalidate)
        %fieldset
          %legend Filterinställningar
          %label(for="rooms") Antal rum:
          %select(ng-model="roomsMin"
                  name="rooms"
                  ng-options="r.name for r in roomValuesMin")
            %option(value="" 
                    disabled="disabled")Minimalt antal rum
          %select(ng-model="roomsMax"
                  ng-options="r.name for r in roomValuesMax")
            %option(value=""
                    disabled="disabled")Maximalt antal rum
          %label(for="area") Area:
          %select(ng-model="areaMin"
                  name="area"
                  ng-options="a.name for a in areaValuesMin")
            %option(value="" 
                    disabled="disabled")Minimal area
          %select(ng-model="areaMax"
                  ng-options="a.name for a in areaValuesMax")
            %option(value=""
                    disabled="disabled")Maximal area
          %label(for="rent") Hyra:
          %select(ng-model="rent"
                  name="rent"
                  ng-options="r.name for r in rentValues")
            %option(value="" 
                    disabled="disabled")Maximal Hyra
          %br
          %input(type="submit"
                 class="btn"
                 name="save"
                 value="Spara")
          %span(ng-show="working")
            %i.icon-spinner.checkmark.icon-spin.icon-large
            {{message}}
          %span(ng-show="checkmark")
            %i.icon-ok.checkmark.okness.icon-large
            {{message}}
          %span(ng-show="cross")
            %i.icon-remove.checkmark.wrongness.icon-large
            {{message}}

      %table
        %legend Välj firringar
        %tr
          %td
            SMS
          %td
            %input(type="checkbox" ng-model="smsNotification") {{smsNotification}}
        %tr
          %td
            Mail
          %td
            %input(type="checkbox" ng-model="emailNotification") {{emailNotification}}
        %tr
          %td
            Push
          %td
            %input(type="checkbox" ng-model="pushNotification") {{pushNotification}}
      %button(type="button" class="btn" ng-click="saveNotify()") Spara

      %form(name="personalInformationForm" ng-submit="submitPersonalInfo()" novalidate)
        %fieldset
          %legend Personlig information
          %label(for="mobile-number") Mobilnummer:
          %input(type="text"
                name="mobile-number"
                placeholder="Mobilnummer"
                id="mobile-number"
                ng-model="mobileNumber")
          %label(for="first-name") Förnamn:
          %input(type="text"
                name="first-name"
                placeholder="Förnamn"
                id="first-name"
                ng-model="firstName")
          %label(for="lastname") Efternamn:
          %input(type="text"
                name="last-name"
                placeholder="Efternamn"
                id="last-name"
                ng-model="lastName")
          %input(type="submit"
                 class="btn"
                 name="save"
                 value="Spara")

      %form(name="accountTermination" ng-submit="terminateAccount()" novalidate)
        %fieldset
          %legend Avsluta konto
          %label(for="termination-password") Lösenord:
          %input(type="password"
                name="termination-password"
                placeholder="Lösenord"
                id="termination-password"
                ng-model="terminationPassword"
                required
                ng-minlength="6"
                ng-maxlength="36")
          %br
          %input(type="submit"
                 class="btn"
                 name="terminate-account"
                 value="Avsluta konto")
