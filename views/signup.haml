%form(name="signup" ng-submit="submit()")
  %fieldset
    %legend Registrera dig här!
    %label(for="email") Din e-postadress:
    %input(type="text"
           name="email"
           id="email"
           ng-model="email"
           required)
    %span(ng-show="signup.email.$invalid") Invalid email
    
    %label(for="password") Lösenord:
    %input(type="password"
           name="password"
           id="password"
           ng-model="password"
           required
           ng-minlength="6"
           ng-maxlength="36")
    %span(ng-show="signup.password.$error.minlength") Password too shorty
    %span(ng-show="signup.password.$error.maxlength") Password too longer
    
    %input(type="submit" name="signup" value="Down the rabbit hole")