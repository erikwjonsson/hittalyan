%form(name="login" ng-submit="submit()")
  %fieldset
    %legend Logga in här
    %label(for="email") Din e-postadress:
    %input(type="email"
           name="email"
           id="email"
           ng-model="email"
           required)
    %span(ng-show="login.email.$invalid") Invalid email
    
    %label(for="password") Lösenord:
    %input(type="password"
           name="password"
           id="password"
           ng-model="password"
           required
           ng-minlength="6"
           ng-maxlength="36")
    %span(ng-show="login.password.$error.minlength") Password too shorty
    %span(ng-show="login.password.$error.maxlength") Password too longer
    
    %input(type="submit" name="login" value="Down the rabbit hole")